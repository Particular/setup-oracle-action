{
	"name": "Dev",
	"build": {
		"dockerfile": "Dockerfile",
		"args": { "VARIANT": "18" }
	},

	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint"
			]
		}
	},

	// Comment out to connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "node",
	"features": {
		"docker-in-docker": "latest",
		"azure-cli": "latest",
		"powershell": "latest"
	}
}
